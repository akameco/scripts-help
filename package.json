{
  "name": "scripts-help",
  "version": "0.1.0",
  "description": "help for npm scripts",
  "license": "MIT",
  "repository": "akameco/scripts-help",
  "author": "akameco <akameco.t@gmail.com> (akameco.github.io)",
  "bin": "cli.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "add-contributor": "all-contributors add",
    "precommit": "yarn flow && lint-staged",
    "fmt": "prettier --write '**/*.{js,json,md}'",
    "flow": "flow",
    "lint": "eslint .",
    "test": "jest",
    "test:cov": "jest --coverage --ci --runInBand",
    "test:ci": "yarn flow && yarn lint && yarn test:cov",
    "help": "./cli.js"
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "files": [
    "index.js",
    "cli.js"
  ],
  "keywords": [
    "cli-app",
    "cli",
    "scripts",
    "help",
    "npm scripts"
  ],
  "dependencies": {
    "chalk": "^2.4.1",
    "find-up": "^3.0.0",
    "meow": "^3.7.0",
    "micromatch": "^3.1.10",
    "os-locale": "^3.0.0",
    "read-pkg-up": "^4.0.0"
  },
  "devDependencies": {
    "all-contributors-cli": "^5.4.0",
    "eslint": "^5.3.0",
    "eslint-config-precure": "^2.7.0",
    "flow-bin": "^0.78.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2"
  }
}
